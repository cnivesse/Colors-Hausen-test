<div class="content {% render 'content-classes', scope: section %}">
  <div class="inner with-layout-options {{ settings.content_layout }}">
    {% assign featured_page = pages[section.settings.page] %}
    {% if featured_page != blank %}
      {% if section.settings.show_heading %}
        <h2 class="shopify-section-title">{{ featured_page.title }}</h2>
      {% endif %}
      <div class="rte">
        {{ featured_page.content }}
      </div>
    {% else %}
      {% if section.settings.show_heading %}
        <h2 class="shopify-section-title">{{ 'sections.onboarding.page_title' | t }}</h2>
      {% endif %}
      <div class="rte">
        <svg class="placeholder-svg with-white-background" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 525 525"><path d="M257.27 229.5a1 1 0 100 2h36a1 1 0 000-2h-36zM231.27 242a1 1 0 100 2h62a1 1 0 000-2h-62zM231.27 254a1 1 0 100 2h62a1 1 0 000-2h-62zM231.27 266a1 1 0 100 2h62a1 1 0 000-2h-62zM231.27 278a1 1 0 100 2h62a1 1 0 000-2h-62zM231.27 290a1 1 0 100 2h62a1 1 0 000-2h-62z"></path><path fill-rule="evenodd" d="M309 199h-64.5v.04a.99.99 0 00-.43.25l-29.77 29.5a1 1 0 00-.3.71V323a3 3 0 003 3h92a3 3 0 003-3V202a3 3 0 00-3-3zm-93 124v-92.5h26.77a3 3 0 003-3V201H309a1 1 0 011 1v121a1 1 0 01-1 1h-92a1 1 0 01-1-1zm1.43-94.5h25.34a1 1 0 001-1v-25.1l-26.34 26.1z" clip-rule="evenodd"></path></svg>
      </div>
    {% endif %}
  </div>
</div>

{% schema %}
{
  "name": "t:sections.featured-page.name",
  "class": "section-page",
  "settings": [
    {
      "type": "page",
      "id": "page",
      "label": "t:sections.featured-page.settings.page.label"
    },
    {
      "type": "header",
      "content": "t:sections.settings.header.content"
    },
    {
      "type": "checkbox",
      "id": "show_heading",
      "label": "t:sections.settings.show_heading.label",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_background",
      "label": "t:sections.settings.show_background.label",
      "default": false
    },
    {
      "type": "checkbox",
      "id": "expanded",
      "label": "t:sections.settings.expanded.label",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "collapsed",
      "label": "t:sections.settings.collapsed.label",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_on_desktop",
      "label": "t:sections.settings.show_on_desktop.label",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_on_mobile",
      "label": "t:sections.settings.show_on_mobile.label",
      "default": true
    }
  ],
  "presets": [
    {
      "name": "t:sections.featured-page.presets.name"
    }
  ]
}
{% endschema %}
