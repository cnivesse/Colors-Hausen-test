<div class="content rich-text {% render 'content-classes', scope: section %}">
  <div class="inner extended">
    {%- if section.blocks.size > 0 -%}
      <div class="info {{ section.settings.text_align }}">
        <div class="blocks">
          {%- for block in section.blocks -%}
            <div class="block {{ block.type }} {% if block.settings.increase_space_before_block %}expanded-top{% endif %}" {{ block.shopify_attributes }}>
              {%- case block.type -%}
              {%- when '@app' -%}
                {% render block %}
              {%- when 'heading' -%}
                <h1 style="max-width: {{ block.settings.max_width }}px;">{{ block.settings.text | newline_to_br }}</h1>
              {%- when 'subheading' -%}
                <h2 style="max-width: {{ block.settings.max_width }}px;">{{ block.settings.text | escape }}</h2>
              {%- when 'paragraph' -%}
                <div class="rte" style="max-width: {{ block.settings.max_width }}px;">
                  {{ block.settings.text }}
                </div>
              {%- when 'button' -%}
                <a class="btn {{ block.settings.style }} {{ block.settings.size }}" href="{{ block.settings.link }}">
                  {{ block.settings.text | escape }}
                </a>
              {%- endcase -%}
            </div>
          {%- endfor -%}
        </div>
      </div>
    {%- else -%}
      {% render 'no-blocks' %}
    {%- endif -%}
  </div>
</div>

