<div class="content image-with-text {% render 'content-classes', scope: section %}">
  <div class="inner with-layout-options {{ settings.content_layout }}">
    <div class="rte">
      <div class="flex-row {% if section.settings.text_position == "left" %}odd{% endif %}">
        <div class="left image">
          {% if section.settings.image %}
            {% render 'resp-img',
             image: section.settings.image,
             alt: section.settings.image.alt,
             default_size: "1080x",
             sizes: "(max-width: 960px) 100vw, 50vw",
             itemprop: "image"
            %}
          {% else %}
            {{ 'image' | placeholder_svg_tag: 'placeholder-svg with-white-background' }}
          {% endif %}
        </div>
        <div class="right info">
          {% for block in section.blocks %}
            <div class="block type-{{ block.type }} {% if block.settings.increase_space_before_block %}expanded-top{% endif %}" {{ block.shopify_attributes }}> 
              {%- case block.type -%}
              {%- when '@app' -%}
                {% render block %}
              {%- when 'heading' -%}
                <h2>{{ block.settings.text }}</h2>
              {%- when 'subheading' -%}
                <p class="category">{{ block.settings.text }}</p>
              {%- when 'paragraph' -%}
                {{ block.settings.text }}
              {%- when 'button' -%}
                <a class="btn {{ block.settings.style }} {{ block.settings.size }}" href="{{ block.settings.link }}">
                  {{ block.settings.text | escape }}
                </a>
              {%- endcase -%}
            </div>
          {% endfor %}
        </div>
      </div>
    </div>
  </div>
</div>

